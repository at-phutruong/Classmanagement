<h1>List of classrooms</h1>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Capacity</th>
      <th>Area</th>
      <% if current_user.role.name.eql? 'administrator' %>
        <th colspan="3">Actions</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @classroom.each do |classroom| %>
      <tr class="<%= classroom.id %>">
        <td><%= classroom.name %></td>
        <td><%= classroom.capacity %></td>
        <td><%= classroom.area %></td>
        <% if current_user.role.name.eql? 'administrator' %>
          <td><%= link_to 'Show', classroom_path(classroom) %></td>
          <td><%= link_to 'Edit', edit_classroom_path(classroom) %></td>
          <td><%= link_to 'Destroy', classroom_path(classroom), method: :delete, remote: true, format: :js %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<% if current_user.role.name.eql? 'administrator' %>
  <%= link_to 'New classroom', new_classroom_path %>
<% end %>
