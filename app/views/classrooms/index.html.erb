<h1>List of classrooms</h1>
<table>
  <thead>
    <tr>
      <th>Index</th>
      <th>Name</th>
      <th>Capacity</th>
      <th>Area</th>
      <% if current_user.role.name.eql? 'administrator' %>
        <th colspan="3">Actions</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @classroom.each do |classroom| %>
      <tr class="<%= classroom.id %>">
        <td class="counter">

        </td>
        <td><%= classroom.name %></td>
        <td><%= classroom.capacity %></td>
        <td><%= classroom.area %></td>
        <% if current_user.role.name.eql? 'administrator' %>
          <td><%= link_to 'Show', classroom_path(classroom), class: 'btn btn-default' %></td>
          <td><%= link_to 'Edit', edit_classroom_path(classroom), class: 'btn btn-default' %></td>
          <td><%= link_to 'Destroy', classroom_path(classroom), class: 'btn btn-default', method: :delete, remote: true, format: :js %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<% if current_user.role.name.eql? 'administrator' %>
  <%= link_to '', new_classroom_path, class: 'btn btn-default btn-circle glyphicon glyphicon-plus' %>
<% end %>
