<h1>List of classrooms</h1>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Capacity</th>
      <th>Area</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @classroom.each do |classroom| %>
      <tr class="<%= classroom.id %>">
        <td><%= classroom.name %></td>
        <td><%= classroom.capacity %></td>
        <td><%= classroom.area %></td>
        <td><%= link_to 'Show', classroom %></td>
        <td><%= link_to 'Edit', edit_classroom_path(classroom) %></td>
        <td><%= link_to 'Destroy', classroom, method: :delete, remote: true, format: :js %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<td><%= link_to 'New classroom', new_classroom_path %></td>
