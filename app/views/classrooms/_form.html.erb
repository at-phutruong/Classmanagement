<div class="form">
  <%= form_for(classroom) do |f| %>
    <div class="classroom-name">
      <%= f.label :name %>
      <%= f.text_field :name, pattern: '[A-Z]\d{3}' %>
    </div>
    <div class="classroom-capacity">
      <%= f.label :capacity %>
      <%= f.text_field :capacity, maxlength: "3",pattern: '\d{1,3}', title: 'Please input right number' %>
    </div>
    <div class="classroom-area">
      <%= f.label :area %>
      <%= f.text_field :area %>
    </div>
    <div class="action">
      <%= f.submit params[:action].eql?('edit') ? 'Edit': 'Create', class: 'btn btn-default btn-update'%><button type="reset" value="Reset" class="btn btn-default btn-update">Reset</button><%= link_to 'Back', schedules_path, class: 'btn btn-default btn-back'%>
    </div>
  <% end %>
</div>
