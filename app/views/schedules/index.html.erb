<h1>List of Schedules</h1>
<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Classroom</th>
      <th>Teacher</th>
      <th>Start</th>
      <th>End</th>

      <th colspan="3">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @schedule.each do |schedule| %>
      <tr class="<%= schedule.id %>">
        <td><%= schedule.date %></td>
        <td><%= schedule.classroom.name %></td>
        <td><%= schedule.teacher.name %></td>
        <td><%= schedule.start %></td>
        <td><%= schedule.end %></td>

        <td><%= link_to 'Show', schedule_path(schedule) %></td>
        <td><%= link_to 'Edit', edit_schedule_path(schedule) %></td>
        <td><%= link_to 'Destroy', schedule_path(schedule), method: :delete, remote: true, format: :js %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<td><%= link_to 'New schedule', new_schedule_path %></td>
